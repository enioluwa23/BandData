<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="drexelairlab.banddata.MainActivity"
    tools:showIn="@layout/activity_main"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:weightSum="1"
        android:background="#505050"
        android:paddingTop="@dimen/customPad"
        android:paddingRight="@dimen/customPad"
        android:paddingLeft="@dimen/customPad"
        android:paddingBottom="@dimen/customPad">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="174dp"
            android:layout_height="221dp"
            android:gravity="bottom"
            android:height="50dp"
            android:textAlignment="viewStart"
            android:width="100dp"
            android:textColor="#56b722"
            android:elegantTextHeight="false"
            android:textSize="20sp" />

       <!-- <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:id="@+id/staticBPM"
            android:gravity="bottom"
            android:height="50dp"
            android:width="120dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textColor="#56b722" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:id="@+id/vQuality"
            android:height="50dp"
            android:width="120dp"
            android:textAlignment="textEnd"
            android:textColor="#56b722" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/gsrText"
                android:textColor="#56b722"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/skinTemp"
                android:textColor="#56b722"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spacer"
            android:layout_gravity="center_horizontal"
            android:height="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorReport"
            android:layout_gravity="center_horizontal"
            android:height="30dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timestamp"
            android:layout_gravity="center_horizontal"
            android:text="@string/timestamp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/server"
                    android:id="@+id/btnConnect"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disserver"
                    android:id="@+id/btnDisconnect"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>